#!/usr/bin/env bash
# File generated by pre-commit: https://pre-commit.com
# ID_HASH: 138fd403232d2ddd5efb44317e38bf03
set -euo pipefail

# start templated
CONFIG=''
HOOK_TYPE=''
INSTALL_PYTHON=''
SKIP_ON_MISSING_CONFIG=
# end templated

pushd "$(dirname "$0")" >& /dev/null
HERE="$(pwd)"
popd >& /dev/null

args=(hook-impl --config "$CONFIG" --hook-type "$HOOK_TYPE" --hook-dir "$HERE")
if [ "$SKIP_ON_MISSING_CONFIG" = 'True' ]; then
    args+=(--skip-on-missing-config)
fi
args+=('--' "$@")

if [ -x "$INSTALL_PYTHON" ]; then
    exec "$INSTALL_PYTHON" -m pre_commit "${args[@]}"
elif which pre-commit >& /dev/null; then
    exec pre-commit "${args[@]}"
else
    echo '`pre-commit` not found.  Did you forget to activate your virtualenv?'
    exit 1
fi
